<UserControl x:Class="Hurace.RaceControl.Views.Controls.ConnectionErrorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hurace.RaceControl.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Grid.Column="1" Background="{StaticResource MaterialDesignBackground}"
            BorderThickness="0">
        <TextBlock 
                Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                Text="No connection could be established."
                HorizontalAlignment="Center" VerticalAlignment="Center">
        </TextBlock>
    </Border>
</UserControl>
